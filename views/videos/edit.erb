<h1> Edit Page </h1>


<%= @video %> 

<form action="/videos/<%= @video.id %>" method="POST">


	<label for="title">Title: </label>
	<input type="text" name="title" value="<%= @video.title %>">
	<br>
	<br>	
	<label for="body">Body: </label>
	<textarea name="body"><%= @video.body %></textarea>
	<br>
	<br>
	<label for="link">Link: </label>
	<textarea name="link"><%= @video.link %></textarea>
	<br>
	<br>
	<label for="genre">Genre: </label>
	<input type="text" name="genre" value="<%= @video.genre %>">



 	<input type="hidden" name="_method" value="PUT">

	<input type="submit" value="Update">
</form>	